<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BackgroundColor" StartPoint="0.5 0" EndPoint="0 1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="#FF00FF5B" />
            <GradientStop Offset="1" Color="#FF0014FF" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ButtonColor" StartPoint="0 1" EndPoint="0 0">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="#FF00E1FD" />
            <GradientStop Offset="1" Color="#FFFC007A" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

</ResourceDictionary>