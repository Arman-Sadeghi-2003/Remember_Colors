<UserControl
    x:Class="RememberColors.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:RememberColors.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer
        Padding="32"
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="600">
            <!--  Header  -->
            <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Settings" />

            <!--  General Settings Card  -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="General Settings" />

                    <!--  Number of Colors  -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource LabelTextStyle}"
                            Text="Number of Colors" />
                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Text="{Binding Model.ShowColorsNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!--  Show Speed  -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource LabelTextStyle}"
                            Text="Animation Speed" />
                        <ComboBox
                            Grid.Column="1"
                            SelectedValue="{Binding ShowSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBoxItem Content="1x" Tag="1" />
                            <ComboBoxItem Content="2x" Tag="2" />
                            <ComboBoxItem Content="3x" Tag="3" />
                            <ComboBoxItem Content="4x" Tag="4" />
                        </ComboBox>
                    </Grid>

                    <!--  Random Colors  -->
                    <CheckBox
                        Content="Enable Random Colors"
                        IsChecked="{Binding Model.IsRandom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernCheckBoxStyle}" />
                </StackPanel>
            </Border>

            <!--  Color Selection Card  -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Color Palette" />

                    <TextBlock
                        Margin="0,0,0,16"
                        Style="{StaticResource LabelTextStyle}"
                        Text="Choose your preferred colors for the display" />

                    <ItemsControl ItemsSource="{Binding Model.SelectableColors.Values}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Background="{Binding DataContext.Model.SelectedColors, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource ColorSelectionToBrushConverter}, ConverterParameter={Binding}}"
                                    Command="{Binding DataContext.SelectColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    IsEnabled="{Binding DataContext.Model.IsRandom, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                    Style="{StaticResource ColorButtonStyle}"
                                    ToolTip="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--  Action Buttons  -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="Actions" />

                    <WrapPanel Orientation="Horizontal">
                        <Button
                            Margin="0,0,12,0"
                            Command="{Binding HomeCommand}"
                            Content="🏠 Home"
                            Style="{StaticResource PrimaryButtonStyle}" />
                        <Button
                            Margin="0,0,12,0"
                            Command="{Binding SaveCommand}"
                            Content="💾 Save Settings"
                            Style="{StaticResource SecondaryButtonStyle}" />
                        <Button
                            Command="{Binding LoadCommand}"
                            Content="📂 Load Settings"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
